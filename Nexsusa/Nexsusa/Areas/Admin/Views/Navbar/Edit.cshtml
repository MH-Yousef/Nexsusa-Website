@using Data.Dtos.NavBarDTOs

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model NavBarItemDTO
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Navbar Edit</h4>
            <div class="basic-form">
                <form asp-area="Admin" asp-controller="Navbar" asp-action="Save">
                    <div class="form-group">
                        <input asp-for="Id" type="text" class="form-control input-default" placeholder="Input Default" readonly hidden>
                    </div>
                    <div class="form-group">
                        <input asp-for="Name" type="text" class="form-control input-default" placeholder="Input Default">
                    </div>
                     <div class="form-group">
                        <input type="text" asp-for="Url" class="form-control input-default" placeholder="Input Default">
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" asp-for="IsVisible" type="checkbox">
                        <label class="form-check-label">Is Visible</label>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-dark">Save</button>
                </form>

            </div>
        </div>
    </div>
</div>