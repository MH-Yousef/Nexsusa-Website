@using Data.Dtos.NavBarDTOs
@{
    ViewData["Title"] = "Navbar";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model List<NavBarItemDTO>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Language List</h4>
                <div class="basic-form">
                    <form>
                        <div class="form-group">
                            <label>Select Language (select one):</label>
                            <select class="form-control" id="sel1">
                                <option>English</option>
                                <option>Turkish</option>
                                <option>German</option>
                                <option>Russian</option>
                            </select>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Navbar Items</h4>
                <div class="table-responsive">
                    <table class="table table-bordered verticle-middle">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Name</th>
                                <th scope="col">Url</th>
                                <th scope="col">Created Date</th>
                                <th scope="col">Updated Date</th>
                                <th scope="col">Has Sub Item</th>
                                <th scope="col">Is Visible</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td></td>
                                <td>Home</td>
                                <td></td>
                                <td>13 November 2024</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>
                                    <span><a href="#" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-pencil color-muted m-r-5"></i> </a><a href="#" data-toggle="tooltip" data-placement="top" title="Close"><i class="fa fa-close color-danger"></i></a></span>
                                </td>

                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>@item.Url</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.UpdatedDate</td>
                                    <td>@item.HasSubItem</td>
                                    <td>@item.IsVisible</td>
                                    <td>
                                        <span>
                                            <a href="/Admin/Navbar/Edit/@item.Id" data-toggle="tooltip" data-placement="top" title="Edit">
                                                <i class="fa fa-pencil color-muted m-r-5"></i>
                                            </a><a href="#" data-toggle="tooltip" data-placement="top" title="Close">
                                                <i class="fa fa-close color-danger"></i>
                                            </a>
                                        </span>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        console.log("Navbar Page Loaded");
    });
</script>
