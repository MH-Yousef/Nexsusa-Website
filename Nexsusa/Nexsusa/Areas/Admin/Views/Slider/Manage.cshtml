@using Data.Dtos.SliderDTOs

@{
    ViewData["Title"] = "Manage";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model SliderDTO

<div class="col-lg-12">
    <div class="card">
        <div style="margin: 20px">
            <select name="langId" class=" form-control" id="languageSelect">
                @foreach (var item in ViewBag.Languages)
                {
                    bool isSelected = ViewBag.SelectedLanguageId == item.Id;
                    if (isSelected)
                    {
                        <option selected value="@item.Id">@item.Name</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                }
            </select>
        </div>
        <div class="card-body">
            <h4 class="card-title">Slider Edit</h4>
            <div class="basic-form">
                <div class="form-group row">
                    <input id="Id" asp-for="Id" type="text" class="form-control input-default">
                    <input id="LangId" asp-for="LangId" type="text" class="form-control input-default">
                </div>
                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Title Enter</label>

                    <div class="col-md-10">
                        <input id="Title" asp-for="Title" type="text" class="form-control input-default">
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Description Enter</label>
                    <div class="col-md-10">
                        <input id="Description" asp-for="Description" type="text" class="form-control input-default">
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-10 offset-md-2">
                        <button type="submit" id="submitBtn" class="btn btn-dark">Save</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        let LanguageId = $('#languageSelect').val();
        $('#LangId').val(LanguageId);
        $(document).on('change', '#languageSelect', function () {
            let LanguageId = $('#languageSelect').val();
            $('#LangId').val(LanguageId);
            $.ajax({
                type: "GET",
                url: `/Admin/Slider/Get`,
                data: { languageId: $('#languageSelect').val() },
                success: function (response) {
                    if (response && response.data) {
                        $('#Id').val(response.data.id);
                        $('#Title').val(response.data.title);
                        $('#Description').val(response.data.description);
                    } else {
                        alert('Data not found or an error occurred.');
                    }
                },
                error: function () {
                    alert('An unexpected error occurred.');
                }
            });
        });


        $(document).on('click', '#submitBtn', function () {
            var data = {
                Id: $('#Id').val(),
                LangId: $('#LangId').val(),
                Title: $('#Title').val(),
                Description: $('#Description').val()
            }
            $.ajax({
                type: "POST",
                url: "/Admin/Slider/Save",
                data: data,
                success: function (response) {
                    if (response == "success") {
                        window.location.href = "/Admin/Slider/List";
                    }
                }
            });
        });
    });
</script>

